<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Earnings-per-Second Tracker</title>
  <style>
    body { font-family: sans-serif; margin: 2em; }
    label { display: block; margin-top: 1em; }
    input, select { padding: 0.5em; width: 100%; max-width: 300px; }
    #display { margin-top: 2em; font-size: 2em; font-weight: bold; }
    button { margin-top: 1em; padding: 0.6em 1.2em; font-size: 1em; }
  </style>
</head>
<body>

  <h2>Earnings-per-Second App</h2>

  <label>
    Salary Type:
    <select id="salaryType">
      <option value="hourly">Hourly</option>
      <option value="monthly">Monthly</option>
    </select>
  </label>

  <label>
    Salary Amount:
    <input type="number" id="salaryAmount" placeholder="e.g. 25" />
  </label>

  <label>
    Work Days per Month:
    <input type="number" id="daysPerMonth" value="22" />
  </label>

  <label>
    Hours per Day:
    <input type="number" id="hoursPerDay" value="8" />
  </label>

  <button id="startBtn">Start Tracking</button>
  <button id="stopBtn" disabled>Stop</button>

  <div id="display">$0.00/sec<br><span id="totalEarned">$0.00</span></div>

  <script>
    let intervalId;
    let ratePerSecond = 0;
    let total = 0;

    const salaryType = document.getElementById('salaryType');
    const salaryAmount = document.getElementById('salaryAmount');
    const daysPerMonth = document.getElementById('daysPerMonth');
    const hoursPerDay = document.getElementById('hoursPerDay');
    const startBtn = document.getElementById('startBtn');
    const stopBtn = document.getElementById('stopBtn');
    const displayRate = document.getElementById('display');
    const displayTotal = document.getElementById('totalEarned');

    startBtn.addEventListener('click', () => {
      // Read inputs
      const type = salaryType.value;
      const amount = parseFloat(salaryAmount.value);
      const days = parseFloat(daysPerMonth.value);
      const hours = parseFloat(hoursPerDay.value);

      if (isNaN(amount) || isNaN(days) || isNaN(hours) || amount <= 0 || days <= 0 || hours <= 0) {
        alert('Please fill in all fields with positive numbers.');
        return;
      }

      // Compute per-second rate
      if (type === 'hourly') {
        ratePerSecond = amount / 3600;
      } else {
        const totalSeconds = days * hours * 3600;
        ratePerSecond = amount / totalSeconds;
      }

      displayRate.innerHTML = `ðŸ’° $${ratePerSecond.toFixed(6)}/sec`;
      total = 0;
      displayTotal.textContent = `$${total.toFixed(2)}`;

      // Disable/Enable buttons
      startBtn.disabled = true;
      stopBtn.disabled = false;

      // Start ticking
      intervalId = setInterval(() => {
        total += ratePerSecond;
        displayTotal.textContent = `$${total.toFixed(2)}`;
      }, 1000);
    });

    stopBtn.addEventListener('click', () => {
      clearInterval(intervalId);
      startBtn.disabled = false;
      stopBtn.disabled = true;
    });
  </script>

</body>
</html>
